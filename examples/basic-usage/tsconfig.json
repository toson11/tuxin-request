{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "baseUrl": "../../",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["./**/*.ts", "../../src/**/*.ts"]
} 